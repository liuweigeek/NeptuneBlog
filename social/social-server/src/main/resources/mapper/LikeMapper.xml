<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.scott.neptune.socialserver.mapper.LikeMapper">

    <resultMap id="BaseResultMap" type="com.scott.neptune.socialserver.entity.LikeEntity">
        <result column="user_id" property="userId"/>
        <result column="post_id" property="postId"/>
        <result column="create_date" property="createDate"/>
    </resultMap>

    <sql id="Base_Column_List">
        user_id, post_id, create_date
    </sql>

    <!-- 判断指定关系是否存在 -->
    <select id="exists" parameterType="com.scott.neptune.socialserver.entity.LikeEntity"
            resultType="boolean">
        select count(1)
        from t_like
        <where>
            <if test="like != null">
                <if test="like.userId != null and like.userId != ''">
                    and user_id = #{like.userId}
                </if>
                <if test="like.postId != null and like.postId != ''">
                    and post_id = #{like.postId}
                </if>
            </if>
        </where>
    </select>

    <!-- 删除指定关系 -->
    <delete id="delete" parameterType="com.scott.neptune.socialserver.entity.LikeEntity">
        delete
        from t_like
        where user_id = #{like.userId}
          and post_id = #{like.postId}
    </delete>

    <!-- 获取指定关系 -->
    <select id="getOne" parameterType="com.scott.neptune.socialserver.entity.LikeEntity"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_like
        <where>
            <if test="like != null">
                <if test="like.userId != null and like.userId != ''">
                    and user_id = #{like.userId}
                </if>
                <if test="like.postId != null and like.postId != ''">
                    and post_id = #{like.postId}
                </if>
            </if>
        </where>
        limit 1
    </select>

    <!-- 查找符合条件的关系 -->
    <select id="findAll" parameterType="com.scott.neptune.socialserver.entity.LikeEntity"
            resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from t_like
        <where>
            <if test="like != null">
                <if test="like.userId != null and like.userId != ''">
                    and user_id = #{like.userId}
                </if>
                <if test="like.postId != null and like.postId != ''">
                    and post_id = #{like.postId}
                </if>
            </if>
        </where>
        order by create_date desc
    </select>

</mapper>